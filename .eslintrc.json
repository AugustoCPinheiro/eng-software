{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "prettier",
        "@typescript-eslint",
        "simple-import-sort"
    ],
    "rules": {
        "no-console": 0, // Remember, this means error!,
        "prettier/prettier": "error",
        "simple-import-sort/sort": "warn"
    }
}
